<fieldset>
    <legend>
     Новый Клиент
    </legend>
    <label>Имя клиента</label>
    <input type="text" name="name" minlength="6" maxlength="50" placeholder="Ф.И.О">
    <label>Номер телефона</label>
    <input class="inputBorder" type="text" name="phonNumber" minlength="6" maxlength="12" placeholder="+7 927 222 22 22" required pattern="^((8|\+7)[\- ]?)?(\(?\d{3}\)?[\- ]?)?[\d\- ]{7,10}$">
    <label>Комментарий</label>
    <input class="inputBorder" type="text" name="comment" minlength="0" maxlength="50">
</fieldset>